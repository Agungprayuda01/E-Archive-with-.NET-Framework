@model E_Archive.Models.Pegawai

@{
    ViewData["Title"] = "Edit";
    var alertMessage = TempData["AlertMessage"] as string;
}

<h1>Edit</h1>

<h4>Pegawai</h4>
<h4>Data bisa di ubah kecuali NIK DAN GAMBAR</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Nik" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Alamat" class="control-label"></label>
                <input asp-for="Alamat" class="form-control" />
                <span asp-validation-for="Alamat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tanggallahir" class="control-label"></label>
                <input asp-for="Tanggallahir" class="form-control" />
                <span asp-validation-for="Tanggallahir" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fotopath" class="control-label"></label>
                <input asp-for="Fotopath" readonly class="form-control" />
                <span asp-validation-for="Fotopath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Role" class="control-label"></label>
                <select asp-for="Role" class="form-control">
                    <option value="Admin">Admin</option>
                    <option value="Staff">Staff</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<body>
    <div class="container"> <!-- Your content here --> </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> @if (!string.IsNullOrEmpty(alertMessage))
    {
        <script type="text/javascript">$(document).ready(function () { Swal.fire({ title: 'Alert', text: '@alertMessage', icon: 'warning', confirmButtonText: 'OK' }); });</script>
    }
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
