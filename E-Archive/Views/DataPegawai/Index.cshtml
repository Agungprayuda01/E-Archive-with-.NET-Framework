@model IEnumerable<E_Archive.Models.Pegawai>

@{
    ViewData["Title"] = "Data Pegawai";
}

<h1>Data Pegawai</h1>

<p>
    <a asp-action="Create">Input Data Pegawai</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alamat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tanggallahir)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fotopath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alamat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tanggallahir)
            </td>
            <td>
                    <a href="@Url.Content("~/uploads/" + item.Fotopath)" class="btn btn-primary" target="_blank">View</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Nik">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Nik">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Nik">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
